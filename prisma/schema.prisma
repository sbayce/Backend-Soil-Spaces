generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Space {
  id           String    @id @default(uuid())
  name         String
  type         SpaceType
  capacity     Int
  pricePerHour Float
  availability Boolean
  bookings     Booking[]
}

model TimeSlot {
  id        Int       @id @default(autoincrement())
  startTime String
  endTime   String
  bookings  Booking[]

  @@unique([startTime, endTime])
}

model Booking {
  id        String        @id @default(uuid())
  userName  String
  userEmail String
  space     Space         @relation(fields: [spaceId], references: [id])
  spaceId   String
  user     User         @relation(fields: [userId], references: [id])
  userId   String
  date        DateTime  
  timeSlot    TimeSlot     @relation(fields: [timeSlotId], references: [id])
  timeSlotId  Int
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())

   @@unique([spaceId, date, timeSlotId])
}

model User {
  id    String   @id @default(uuid())
  name  String
  email String   @unique
  password String
  role  UserRole
  bookings Booking[]
}
enum SpaceType {
  PRIVATE_OFFICE
  MEETING_ROOM
  HOT_DESK
}
enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}
enum UserRole {
  ADMIN
  MEMBER
}
